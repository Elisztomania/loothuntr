<!-- INDEX DES PISTES -->
<div class="container">

<!-- BOUCLE QUI AFFICHES CHAQUE PISTE -->

  <h2 class="text-xl text-center p-5">Les pistes pour la quête <em><%= @guild.quest.title %></em></h2>
  <div class="min-w-0 p-4 bg-white rounded-xl h-auto">
    <% i = 0 %>
      <% @pistes.each do |piste| %>
        <% if piste.guild == @guild %>
        <% i += 1 %>
        <div class="p-4 rounded-xl bg-gray-50 mb-4">
          <div class="flex items-center">
            <%= image_tag piste.user.photo, class: "avatar-mini"%>
            <h3 class="text-lg pl-2">Piste n°<%= i %> : <%= piste.title %></h3>
            <p class="flex text-sm italic text-gray-800"> <%= piste.created_at.strftime("%d %b. %Y") %></p>
          </div>
            <p><%= piste.description %></p>
            <% piste.photos.each do |photo| %>
              <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill %>
            <% end %>

          <div class="p-2 comments">
            <% if piste.category != "piste_publiee" %>
              <% piste.comments.each do |comment| %>
                <%= render 'comments/comment_section', comment: comment %>
              <% end %>
            <% end %>
          </div>

            <p><%= simple_form_for [piste, @comment_new], remote: true do |f| %>
              <div class="flex items-center">
                <%= f.input_field :content, label: false, placeholder: "Votre commentaire", class: 'pr-3 block w-full pl-2 pr-12 sm:text-sm border-gray-300 rounded-md' %>
                <%= button_tag type: 'submit', class: 'btn-dash py-2 px-3 rounded-sm ml-3' do %>
                  <i class="fas fa-paper-plane"></i>
                <% end %>
              <% end %>
              </div>
            </p>

          <div class="ml-100">
            <% if piste.category == 'piste' %>
              <a class=""><%= link_to "Poster une avancée", new_avancee_from_post_post_path(piste), class: "btn btn-primary mx-96 mt-10"  %></a>
            <% elsif piste.category == 'piste_publiee' %>
              <p class= "btn mt-10">Avancée déjà publiée</p>
            <% end %>
          </div>
      </div>

        <% end %>

      <% end %>
          </div>
    </div>










<!-- FIN DE BOUCLE -->

<div class= "autre">
<!-- BUTTONS NEW PISTE & RETOUR -->
  <%= link_to "Explorer une nouvelle piste", new_guild_post_path(@guild), class: "btn btn-primary mt-10 mb-10" %>

  <%= link_to "Retour au tableau de bord", guild_path(@guild), class: "btn btn-primary mt-10 mb-10" %>
</div>
