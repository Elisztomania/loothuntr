<!-- FORMULAIRE QUI DUPLIQUE UNE PISTE POUR CREER UNE AVANCEE -->

<div class=" md:p-10  md:px-0 items-center flex flex-col">

    <div class=" max-w-lg md:p-12 my-8 shadow-2xl body-bg rounded-md">
        <div class="text-center">
            <h3 class="font-bold text-3xl">Publier l'avancée sur la quête</h3>
        </div>

        <div class="mt-8  ">

  <!-- @post.photos -->
  <% @post.photos.each do |photo| %>
      <div class="flex-1 self-center p-1"><%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill %></div>
  <% end %>

  <%= simple_form_for @avancee, url:create_avancee_from_post_post_path do |f| %>
  <form class="flex flex-col" method="POST" action="#">
  <div class=" border-black-100 rounded w-full text-black-900 focus:outline-none focus:border-purple-600 transition duration-500 p-1 mb-1 champ-form">
      <%= f.input :title, label: 'Titre'  %>
  </div>
  <div class=" border-black-100 rounded w-full text-black-900 focus:outline-none focus:border-purple-600 transition duration-500 p-1 mb-1 champ-form">
      <%= f.input :description, label: 'Description'  %>
  </div>
  <div class="flex flex-col items-center mt-4 px-12">
      <%= f.button :submit, "Publier", class: 'button-create-quest' %>
  </div>
  <% end %>

</form>
</div>
</div>

</div>


