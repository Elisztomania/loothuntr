<div class="font-sans leading-normal tracking-normal">
  <% if @quest.photo.attached? %>
    <div class="w-full m-0 p-0 bg-cover bg-bottom" style="background-image:url('<%= cl_image_path @quest.photo.key %>'); background-position: center; height: 60vh; max-height:460px; box-shadow: inset 0 0 0 100vw rgba(7, 25, 43, 0.4)">
  <% else %>
    <div class="w-full m-0 p-0 bg-cover bg-bottom" style="background-image:url('https://www.gtreview.com/wp-content/uploads/2014/11/Gold-coins-treasure-stacks.jpg'); background-position: center; height: 60vh; max-height:460px; box-shadow: inset 0 0 0 100vw rgba(7, 25, 43, 0.4)">
  <% end %>
    <div class="container max-w-4xl mx-auto pt-16 md:pt-32 text-center break-normal">
      <!--Title-->
      <p class="text-white font-extrabold text-3xl md:text-5xl">
        🤠 <%= @quest.title %>
      </p>
    </div>
  </div>

  <!--Container-->
  <div class="container px-4 md:px-0 max-w-6xl mx-auto -mt-32">
    <div class="mx-0 sm:mx-6">
      <div class="bg-white-200 w-full text-xl md:text-2xl text-gray-800 leading-normal rounded-t">

      <!--Lead Card-->
      <div class="flex h-full bg-white rounded-md overflow-hidden shadow-lg">

        <div class="w-full md:w-1/2 rounded-t group transition-transform duration-200 transform sm:hover:-translate-y-1">
          <div class="flex-1 bg-white rounded-t rounded-b-none overflow-hidden shadow-lg h-full">
            <h2 class="w-full font-bold text-xl text-gray-900 px-6 mt-4 mb-4">🤔 Description</h2>
            <p class="text-gray-800 font-serif text-base px-13 mb-5 ">
              <%= @quest.description %>
            </p>
          </div>
        </div>

        <div class="w-full md:w-1/2 rounded-t group transition-transform duration-200 transform sm:hover:-translate-y-1">
          <div class="flex-1 bg-white rounded-t rounded-b-none overflow-hidden shadow-lg h-full">
            <h2 class="w-full font-bold text-xl text-gray-900 px-6 mt-4 mb-4 ">🤩 Informations clés</h2>
              <div class="text-gray-800 font-serif text-base px-13 justify-self-center">
                 <p class="mb-1"> 📍   <%= @quest.location %> </p>
                 <p class="mb-1"> ➡️   <%= @quest.resolved ? "Quête terminée" : "Quête en cours" %> </p>
                 <p class="mb-1"> 👑   Créée par <%= @quest.creator.username %> </p>
                 <p class="mb-1"> ⏰   Le <%= @quest.created_at.strftime("%d %b. %Y") %></p>
              </div>


<!--  INFO SI GUILDE ET LA REJOINDRE / TABLEAU DE BORD -->
    <div class="mx-13 my-6 text-center text-sm">
      <% if @quest.guild.present? %>
        <% if current_user != nil && @quest.resolved == true %>
          <p class="text-lg mb-2">La guilde <strong><%= @quest.guild.name %></strong> a résolu la quête</p>
          <p class="italic mb-3">« <%=@quest.guild.description  %> »</p>
          <div class="flex items-center justify-center" >
            <% @quest.guild.members.each do |member| %>
              <% if member.accepted? %>
                <div class="px-1"><%= cl_image_tag member.user.photo.key, class: "avatar" %></div>
              <% end %>
            <% end %>
          </div>

        <% elsif current_user != nil && current_user.is_member_of?(@quest.guild) %>
          <p class="text-lg font-semibold mt-10 mb-2"> Guilde active sur la quête : <%= @quest.guild.name %> </p>
          <p class="italic mb-10">« <%=@quest.guild.description  %> »</p>
          <%= link_to "Tableau de bord de guilde", guild_path(@quest.guild), class: "btn-dash mx-auto lg:mx-0 font-extrabold rounded mt-20 md:my-6 py-2 px-4 w-48n no-underline" %>

        <% elsif current_user != nil && !current_user.has_apply_to?(@quest.guild) %>
          <p class="text-lg font-semibold mt-8 mb-2"> Guilde active sur la quête : <%= @quest.guild.name %> </p>
          <p class="italic mb-8"> « <%=@quest.guild.description  %> »</p>
          <%= link_to "Postuler pour les rejoindre", new_guild_member_path(@quest.guild), class: "btn-rejoindre mx-auto lg:mx-0 font-extrabold rounded mt-20 md:my-6 py-2 px-4 w-48n no-underline" %>
        <% end %>

      <% elsif @quest.creator == current_user %>
          <%= link_to 'Créer une guilde', new_quest_guild_path(@quest), class: "button-create-quest" %>

      <% else %>
          <p>Pas de guilde active sur la quête</p>
      <% end %>
    </div>
    <!--  EDIT QUEST -->
              <div class="text-right mx-8 mb-4 text-base">
                <% if current_user != nil && current_user == @quest.creator %>
                  <%= link_to edit_quest_path(@quest.id) do %>
                    <i class="fas fa-pencil-alt hover:text-gray-400"></i>
                  <% end %>
                <% end %>
              </div>
              </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<!--Container-->

  <div class="container">
    <% if @quest.avancees.count != 0 %>

      <h2 class="ml-36 mr-40 mt-20 mb-4 pb-3 text-left text-4xl text-t-purple border-b border-gray-300">Les avancées de la quête</h2>

  <!-- POST DES AVANCEES BOUCLE-->
      <div class="mx-36 border-l border-gray-300">

        <% @quest.avancees.each do |avancee| %>
        <div class="mb-6 ml-6 px-6 min-w-0 pb-4">

          <div class="flex item-center px-1 mb-3">
            <%= cl_image_tag avancee.user.photo.key, class: "avatar -ml-18"%>
            <h3 class="flex pl-7 text-2xl items-center"><%= avancee.title %>
              <p class="flex text-xs italic text-gray-800 pl-1 pt-1.5"> <%= avancee.created_at.strftime("%d %b. %y") %></p><br>
            </h3>
          </div>


          <p class="pl-10 text-justify bg-white rounded-md p-4"><%= avancee.description %></p>

          <div class="flex items-center justify-center">
          <% avancee.photos.each do |photo| %>
              <div class="p-4"><%= cl_image_tag photo.key, height: 300, width: 400 %></div>
          <% end %>
          </div>
        </div>
        <% end %>
      </div>

    </div>
  <!-- FIN POST DES AVANCEES BOUCLE-->


  <!-- Code de la team BACK -->

<% else %>
  <h2 class="m-5 p-5 text-center text-xl"><%= @quest.title %> n'a pas encore d'avancée, rejoignez sa guilde pour trouver le trésor !</h2>
  <center class= "mb-10"><%= image_tag 'no_avancee_background.png', width: 500 %></center>
<% end %>

<!-- RETOUR TOUTES LES QUESTS -->
<div class="mx-40 my-20 text-center">
  <%= link_to 'Retour', quests_path, class: "btn-back mx-auto lg:mx-0 font-extrabold rounded mt-20 md:my-6 py-2 px-4 w-48n no-underline" %>
</div>

