<ul class="my-8 sm:my-16 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-8">

    <li class="group transition-transform duration-200 transform sm:hover:-translate-y-1">

      <a href="#">
        <% @quests.each do |quest| %>
        <%= link_to quest do %>

        <div class="relative flex-shrink-0">

          <img loading="lazy" src="https://cdn1.vectorstock.com/i/1000x1000/21/50/pirate-in-the-treasure-island-vector-8452150.jpg"
          srcset="https://cdn1.vectorstock.com/i/1000x1000/21/50/pirate-in-the-treasure-island-vector-8452150.jpg 1x, https://cdn1.vectorstock.com/i/1000x1000/21/50/pirate-in-the-treasure-island-vector-8452150.jpg 2x"
          width="352" height="256"
          class="transition duration-200 group-hover:shadow-2xl h-64 w-full rounded-lg shadow-md object-cover"
          alt="Image de Pirate">
        </div>



        <div class="relative px-4 -mt-12 text-left">
          <div class="bg-white rounded-lg px-4 py-3 transition duration-200 sm:group-hover:shadow-2xl shadow-md">
            <div class="text-xs text-gray-600 font-semibold"><span class="uppercase">En cours</span> <span class="text-gray-400 text-sm mx-2"> • </span><%= quest.location %></div>

              <h4 class="truncate text-gray-900 font-bold text-sm leading-tight my-1"><%= quest.title %></h4>

              <div class="m-3">
                <button class="bg-white text-gray-800 font-bold rounded border-b-2 border-blue-500 hover:border-blue-600 hover:bg-blue-500 hover:text-black shadow-md py-2 px-6 inline-flex items-center">
                  <span class="mr-2">Découvrir</span>
                  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24">
                  <path fill="currentcolor" d="M2.01 21L23 12 2.01 3 2 10l15 2-15 2z"></path>
                  </svg>
                </button>
              </div>

            </div>
          </div>
        </a>
    </li>

  <% end %>
<% end %>

</ul>
